<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnackBar.SnackBarActivity">


    <Button
        android:id="@+id/btn_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default SnackBar"
        app:layout_constraintBottom_toTopOf="@+id/btn_CustonView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_CustonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom View SnackBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ActionOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SnackBar With Action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_CustonView" />
</androidx.constraintlayout.widget.ConstraintLayout>